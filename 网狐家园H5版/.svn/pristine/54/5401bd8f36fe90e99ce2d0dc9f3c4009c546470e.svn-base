namespace df
{

     /*df
    *接口定义
    */
    export interface IController
    {
        /**
         * 控制器名称
         */
        name:string;
        
        /** controller生命周期*/

        /**
         * 场景将要切入
         */
         viewWillAppear(animated :boolean):void;

        /**
         * 场景切入 
         */
         viewDidAppear(animated :boolean):void; 
    
        /**
         * 场景将要退出
         */
        viewWillDisappear(animated :boolean):void;

        /**
         * 场景退出
         */
        viewDidDisappear(animated :boolean):void;

        /**
         * 回收资源
         */
        dealloc():void;

        /**
         * 切换页面
         * @param target 目标view
         * @param mode   切换模式
         */
        onChangeView(target :any,mode? :number):void

        /**进入前台
         * applicationDidBecomeActive
         */
        applicationDidBecomeActive(event :any):void;

         /**进入后台
         * applicationDidBecomeActive
         */
        applicationWillEnterForeground(event :any):void;

        /**
         * 网络接入
         */
        networkConnect();

        /**
         * 网络消息
         */
        onMessage(msg: any);

    }


    /**
     * 游戏接口
     */
    export interface IGameMessage
    {
        /**
         * 游戏场景
         */
        onGameScene(buffer:any):void;

        /**
         * 游戏协议
         */
        onGameMessage(buffer:any):void;
        
        /**
         * 系统消息
         */
        onGameSystemMessage(buffer:any):void;
    }

    /**
     * 用户服务
     */
    export interface IUserService
    {
         /**
         * 用户进入
         */
        onUserEnter(buffer:any):void;

        /**
         * 用户状态
         */
        onUserStatus(buffer:any):void;

        /**
         * 用户聊天
         */
        onUserChat(buffer:any):void;

        /**
         * 用户分数
         */
        onUserScore(buffer:any):void;

    }

    /**
     * 连接服务
     */
    export interface IConnectService
    {
        /**
         * 连接操作 两种模式
         * 1.0 直连模式
         * 2.0 虚拟模式
         */

          //模式1
          connectServer(ServerAddr: string,wServerPort: number,cbServiceKind?: number, wServiceIndex?:number);
        
          //模式2
          connectServerKind(dwClientIndex: number, cbServiceKind: number, wServiceIndex:number);

         /**
          * 连接成功
          */

          connectSuccess();

          /**
           * 连接失败
           */

          connectFailure();

          /***
           * 关闭当前连接
           */

          closeConnect()

    }

    /** 虚拟连接模式
     * socket绑定
     */
    export interface IBindSocket
    {
        /**
         * 绑定成功
         */
        socketBindSuccess();

        /**
         * 绑定失败
         */
        socketBindFailure();


    }

    /**
     * 服务中断
     */
    export interface IVirtualShut
    {

        virtualConnectShut();

    }

    /**socket 服务
     * 关闭socket
     * 重连机制
     */
    export interface ISocketService
    {

        /***
         * 重连次数
         */
         m_ReConnectCount: number;

         /**
          * 最大连接
          */
         m_ReConnectMax: number;

          /**
           * 连接超时
           */
         m_ReConnectTimeOut: number;

        /**
         * 关闭服务
         */
         closeService();

        /**
         * 重连机制
         */
         reconnectionService();

        /**
         * 重连超时
         */
         reconnectTimeOut();

    }

     /**
     * 对话框接口
     */
    export interface IDialog
    {
        /**
         * 确定事件
         */
        onSure():void;

        /**
         * 取消事件
         */
        onCancell():void
    }

    /**
     * 阻断触摸
     */
    export interface IPopWait
    {
        /**
         * 超时处理
         */
        onTimeOut():void;

        /**
         * 提示内容
         */
        setContent?(content:string):void;
    }
}